{
  "name": "typing-game",
  "version": "2.0.1",
  "description": "Multilingual Typing Practice Game",
  "author": {
    "name": "Lacunae.tech",
    "url": "https://lacunae.tech"
  },
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:win7": "electron-builder --config electron-builder.win7.yml --win --x64 --ia32"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "chart.js": "^4.4.2",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "tech.lacunae.typinggame",
    "productName": "Typing Game",
    "copyright": "Copyright © 2024 Lacunae.tech",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!*.md",
      "!release/*",
      "!.gitignore",
      "!.git/*",
      "!仕様書.md",
      "!assets/lang/**",
      "!assets/layouts/**",
      "!assets/words/**"
    ],
    "extraResources": [
      {
        "from": "assets/lang",
        "to": "assets/lang"
      },
      {
        "from": "assets/layouts",
        "to": "assets/layouts"
      },
      {
        "from": "assets/words",
        "to": "assets/words"
      }
    ],
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
